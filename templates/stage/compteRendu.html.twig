{% extends "base.html.twig" %}

{% block title %}Stage - {{ stage.slug }}{% endblock %}

{% block body %}
<div class="flex flex-col min-h-screen overflow-hidden">

	<!-- Compte rendu RESPONSIVE -->
	<main class="grow">

		<section class="relative">

			<div class="relative max-w-6xl mx-auto px-4 sm:px-6">
				<div class="py-2">
					<div class="max-w-3xl mx-auto">
						{% for rendu in compteRendu %}

						<article id="eventContent" class="my-12">
							<!-- Article header -->
							<header class="mb-8">
								<!-- Title and excerpt -->
								<div class="text-center md:text-left">
									<h2 class="text-xl md:text-2xl font-bold mb-4">{{ rendu.titre }}</h2>
								</div>
							</header>
							<hr class="w-5 h-px pt-px bg-gray-400 border-0 mb-8"/>

							<!-- Article content -->
							<div class="text-lg text-pretty text-gray-800 mb-1">

								<figure class="mb-8 mt-8 flex justify-center">
									<img class="w-32 h-20 object-contain" src="/images/compteRendu/{{rendu.imageName}}" alt="{{ rendu.titre }}"/>
								</figure>

								<div class="leading-relaxed contenue">
									{{ rendu.message|raw }}
								</div>
							</div>

						</article>
						{% endfor %}

					</div>
				</div>
			</div>
		</section>
	</main>

</div>
{% endblock %}
