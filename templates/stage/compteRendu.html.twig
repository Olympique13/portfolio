{% extends "base.html.twig" %}

{% block title %}Stage -
	{{ stage.slug }}]
{% endblock %}

{% block body %}

	{% if compteRendu|length < 1 %}
		<h1>Aucun compte rendu disponible</h1>
	{% else %}
		{% for rendu in compteRendu [0:4] %}
			<main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900" id="renduPrev" style="display: block">
				<div class="flex justify-between px-4 mx-auto max-w-screen-xl">
					<article class="mx-auto w-full format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
						<header class="mb-16 lg:mb-6 not-format text-center">
							<h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">{{ rendu.titre }}</h1>
						</header>
						<section class="main_review" id="compteRenduMsg">
							<div class="text-xl leading-relaxed text-gray-700 dark:text-gray-300 custom-list">
								{{ rendu.message|raw }}
								{# |raw pour rendre brute le code (ex: <pre> ou <img> etc..) contenue dans un text #}
							</div>
						</section>
					</article>
					<div class="mt-1 rounded-full p-2 w-fit flex justify-center">
						<img src="/images/compteRendu/{{ rendu.imageName }}" class="rounded-3xl" alt="Image annexe" sizes="(max-width: 800px) 100vw, 620px" width="520" height="424" decoding="async">
					</div>
				</div>
			</main>
			<hr class="mt-11">

		{% endfor %}

		<button id="buttonNext">Suivant</button>

		{% for rendu in compteRendu [4:] %}
			<main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900" id="renduNext" style="display: none">
				<div class="flex justify-between px-4 mx-auto max-w-screen-xl">
					<article class="mx-auto w-full format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
						<header class="mb-16 lg:mb-6 not-format text-center">
							<h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">{{ rendu.titre }}</h1>
						</header>
						<section class="main_review" id="compteRenduMsg">
							<div class="text-xl leading-relaxed text-gray-700 dark:text-gray-300 custom-list">
								{{ rendu.message|raw }}
								{# |raw pour rendre brute le code (ex: <pre> ou <img> etc..) contenue dans un text #}
							</div>
						</section>
					</article>
				</div>
			{% endfor %}
			<div class="flex justify-center mt-8">
				<a href="#retourhaut" class="inline-block px-6 py-3 text-sm font-medium leading-6 text-center text-white transition bg-blue-600 rounded shadow ripple hover:shadow-lg hover:bg-blue-700 focus:outline-none">
					<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewbox="0 0 24 24">
						<g fill="none"><path d="M24 0v24H0V0zM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.019-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"/>
							<path fill="currentColor" d="M13.06 3.283a1.5 1.5 0 0 0-2.12 0L5.281 8.939a1.5 1.5 0 0 0 2.122 2.122L10.5 7.965V19.5a1.5 1.5 0 0 0 3 0V7.965l3.096 3.096a1.5 1.5 0 1 0 2.122-2.122z"/>
						</g>
					</svg>
				</a>
			</div>
		{% endif %}
	{% endblock %}
