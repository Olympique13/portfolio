{% extends "base.html.twig" %}

{% block title %}Stage -
    {{ stage.slug }}]
{% endblock %}

{% block body %}
    {% for rendu in compteRendu %}
    <main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased">
        <div class="flex justify-between px-4 mx-auto max-w-screen-xl">
            <article class="mx-auto w-full format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
                <header class="mb-16 lg:mb-6 not-format text-center">
                    <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">{{ rendu.titre }}</h1>
                </header>
                <section class="main_review" id="compteRenduMsg">
                    <div class="text-2xl leading-relaxed text-gray-700 dark:text-gray-300 custom-list">
                        {{ rendu.message|raw }}
                        {# |raw pour rendre brute le code (ex: <pre> ou <img> etc..) contenue dans un text #}
                    </div>
                </section>
            </article>
        </div>
    </main>

<hr class="mt-11">
    {% endfor %}
    <div class="flex justify-center mt-8">
        <a href="{{ path('app_stage') }}" class="inline-block px-6 py-3 text-sm font-medium leading-6 text-center text-white transition bg-blue-600 rounded shadow ripple hover:shadow-lg hover:bg-blue-700 focus:outline-none">
            Retour Ã  mes stages
        </a>
    </div>

{% endblock %}
